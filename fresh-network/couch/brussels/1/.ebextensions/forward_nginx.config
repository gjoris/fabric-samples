files:
    "/etc/nginx/conf.d/forward_nginx.conf":
        owner: root
        group: root
        mode: "000644"
        content: |
            server {
              listen 5984;

              server_name couchdb1.*;

              location / {
                proxy_set_header   X-Forwarded-For $remote_addr;
                proxy_set_header   Host $http_host;
                proxy_set_header   X-Real-IP $remote_addr;
                proxy_pass         "http://docker";
              }
            }


